<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="dataClass"
            type="com.example.augmanium.afterAuth.cartFragment.dataClass.CartFragmentDataClass" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_100sdp"
            app:cardCornerRadius="@dimen/_12sdp"
            android:layout_margin="@dimen/_8sdp"

            app:cardElevation="@dimen/_5sdp">

            <ImageView
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                setHomeFragmentImage="@{dataClass.image}"/>
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:id="@+id/nameAndPrice"
            android:layout_toRightOf="@id/imageCard"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="@{dataClass.productName}"
                android:textColor="@color/secondary"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@{dataClass.productPrice}"
                android:textColor="@color/Primary"
                android:textSize="@dimen/_13sdp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nameAndPrice"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_toRightOf="@id/imageCard"
            android:fontFamily="@font/montserrat_semibold"
            android:text="@{dataClass.productCategory}"
            android:textColor="@color/gray"

            />


        <LinearLayout
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_below="@id/category"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_toRightOf="@id/imageCard"
            android:background="@drawable/item_gray_backgroud"
            android:gravity="center"
            >


<!--            <ImageView-->
<!--                android:id="@+id/dec"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_centerVertical="true"-->
<!--                android:layout_marginStart="@dimen/_15sdp"-->
<!--                android:src="@drawable/ic_minus" />-->

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textColor="@color/secondary" />

            <TextView
                android:id="@+id/countItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{dataClass.productCount}"
                android:textColor="@color/secondary" />
<!--            <ImageView-->
<!--                android:id="@+id/inc"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="match_parent"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:layout_marginEnd="@dimen/_15sdp"-->
<!--                android:src="@drawable/ic_plus" />-->


        </LinearLayout>


        <RelativeLayout
            android:id="@+id/deleteBtn"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/item_orange_background">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_icon_delete"

                />

        </RelativeLayout>


    </RelativeLayout>
</layout>