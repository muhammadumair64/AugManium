<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/_20sdp"
    android:paddingStart="@dimen/_20sdp"
    android:paddingEnd="@dimen/_20sdp"
    tools:context=".CheckoutSummary">
  <RelativeLayout
      android:id="@+id/toplayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_menu" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/montserrat_bold"
        android:paddingTop="@dimen/_4sdp"
        android:paddingBottom="@dimen/_8sdp"
        android:text="Checkout"
        android:textColor="@color/Primary"
        android:textSize="@dimen/_17sdp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_icons_search_gray" />


  </RelativeLayout>

  <LinearLayout
      android:id="@+id/layout_bar"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_70sdp"
      android:layout_below="@id/toplayout"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp">

      <TextView
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="@dimen/_10sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@drawable/item_circle_boarder" />

      <TextView
          android:layout_width="@dimen/_12sdp"
          android:layout_height="@dimen/_12sdp"
          android:layout_alignParentStart="true"
          android:layout_marginLeft="@dimen/_14sdp"
          android:layout_marginTop="@dimen/_9sdp"
          android:background="@drawable/item_red_circle" />


      <TextView
          android:layout_width="match_parent"
          android:layout_height="@dimen/_1sdp"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/_30sdp"
          android:layout_marginRight="@dimen/_20sdp"
          android:background="@drawable/item_line"
          android:padding="@dimen/_50sdp" />
<RelativeLayout
    android:layout_width="@dimen/_20sdp"
    android:layout_height="@dimen/_20sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginRight="@dimen/_20sdp"
    android:layout_alignParentRight="true"
    >

  <TextView
      android:layout_width="@dimen/_20sdp"
      android:layout_height="@dimen/_20sdp"
      android:layout_centerInParent="true"
      android:background="@drawable/item_circle_boarder" />

  <TextView
      android:layout_width="@dimen/_12sdp"
      android:layout_height="@dimen/_12sdp"

      android:layout_marginTop="@dimen/_9sdp"
android:layout_centerInParent="true"
      android:background="@drawable/item_red_circle" />
</RelativeLayout>


      <TextView
          android:layout_width="@dimen/_20sdp"
          android:layout_height="@dimen/_20sdp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/_25sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@drawable/item_circle_boarder" />

      <TextView
          android:layout_width="@dimen/_12sdp"
          android:layout_height="@dimen/_12sdp"
          android:layout_centerInParent="true"
          android:layout_marginLeft="@dimen/_14sdp"
          android:layout_marginTop="@dimen/_9sdp"
          android:background="@drawable/item_red_circle" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="@dimen/_5sdp"
          android:duplicateParentState="true"
          android:fontFamily="@font/montserrat_semibold"
          android:text="Address"
          android:textColor="@color/secondary"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:fontFamily="@font/montserrat_semibold"
          android:text="Payments"
          android:textColor="@color/secondary"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold" />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/_8sdp"
          android:fontFamily="@font/montserrat_semibold"
          android:text="Summary"
          android:textColor="@color/secondary"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold" />

    </RelativeLayout>


  </LinearLayout>

  <RelativeLayout
      android:id="@+id/items"
      android:layout_below="@id/layout_bar"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Summary"
        android:textColor="@color/secondary"
        android:fontFamily="@font/montserrat_semibold"
        android:textSize="@dimen/_15sdp"
        />

    <LinearLayout
        android:layout_marginTop="@dimen/_10sdp"
      android:layout_below="@id/summary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_110sdp"
        android:weightSum="2"
        >

      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/_10sdp"
            >


          <androidx.cardview.widget.CardView
              android:id="@+id/imageCard"
              android:layout_width="@dimen/_80sdp"
              android:layout_height="@dimen/_70sdp"
            app:cardElevation="0dp"
              app:cardCornerRadius="@dimen/_12sdp" />
          <LinearLayout
              android:layout_marginTop="@dimen/_8sdp"
              android:layout_below="@id/imageCard"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              >
            <TextView
                android:id="@+id/productName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhiteDress"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/secondary"
                android:fontFamily="@font/montserrat_semibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15$"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/Primary"
                android:fontFamily="@font/montserrat_semibold"
                />

          </LinearLayout>
        </RelativeLayout>

      </RelativeLayout>
      <RelativeLayout
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            >


          <androidx.cardview.widget.CardView
              app:cardElevation="0dp"
              android:id="@+id/imageCard2"
              android:layout_width="@dimen/_80sdp"
              android:layout_height="@dimen/_70sdp"
              app:cardCornerRadius="@dimen/_12sdp" />

          <LinearLayout
              android:layout_marginTop="@dimen/_8sdp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/imageCard2"
              android:orientation="vertical">

            <TextView
                android:id="@+id/productName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="WhiteDress"
                android:textColor="@color/secondary"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:text="15$"
                android:textColor="@color/Primary"
                android:textSize="@dimen/_12sdp" />

          </LinearLayout>
        </RelativeLayout>

      </RelativeLayout>

    </LinearLayout>






  </RelativeLayout>

  <RelativeLayout
      android:id="@+id/addresslayout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/items"
      android:layout_marginTop="@dimen/_10sdp"
      android:layout_marginStart="@dimen/_15sdp"
      android:layout_marginEnd="@dimen/_15sdp">

    <TextView
        android:id="@+id/shipping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Shipping Address"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_11sdp" />

    <ImageButton
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_circle_tick" />

    <EditText
        android:id="@+id/Address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_below="@id/shipping"
        android:background="@null"
        android:editable="false"
        android:fontFamily="@font/montserrat_regular"
        android:hint="12, Bay brook, Sharps Rd, Keilor East, Lahore"
        android:textSize="@dimen/_15sdp" />

    <TextView
        android:id="@+id/change_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Address"
        android:fontFamily="@font/montserrat_semibold"
        android:text="change"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"

        />

  </RelativeLayout>

  <ImageView
      android:id="@+id/seconddivider"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/addresslayout"
      android:layout_marginTop="@dimen/_10sdp"
      android:src="@drawable/icon_divider"
      android:layout_marginStart="@dimen/_15sdp"
      android:layout_marginEnd="@dimen/_15sdp"/>

  <RelativeLayout
      android:id="@+id/paymentField"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/seconddivider"
      android:layout_marginStart="@dimen/_15sdp"
      android:layout_marginTop="@dimen/_15sdp"
      android:layout_marginEnd="@dimen/_15sdp">

    <TextView
        android:id="@+id/Payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Payment"
        android:textColor="@color/secondary"
        android:textSize="@dimen/_11sdp" />

    <ImageButton
        android:layout_width="@dimen/_15sdp"
        android:layout_height="@dimen/_15sdp"
        android:layout_alignParentRight="true"
        android:background="@drawable/ic_circle_tick" />

    <RelativeLayout
        android:id="@+id/paymentImageLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_60sdp"
        android:layout_below="@id/Payment">

      <ImageButton
          android:id="@+id/paymentImage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:background="@null"
          android:src="@drawable/ic_icon_mastercard" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_toEndOf="@id/paymentImageLayout"
        android:orientation="vertical">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:fontFamily="@font/montserrat_semibold"
          android:text="Master Card"
          android:textSize="@dimen/_12sdp" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_3sdp"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:text="**** **** **** "
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text=" 4543"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />
      </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/change_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/paymentImageLayout"
        android:fontFamily="@font/montserrat_semibold"
        android:text="change"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        android:textStyle="bold"

        />


  </RelativeLayout>

  <LinearLayout

      android:layout_below="@id/paymentField"
      android:layout_marginTop="@dimen/_15sdp"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_35sdp"
      android:weightSum="2"
      >
    <RelativeLayout
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/item_red_stroke_btn"
        android:layout_weight="1"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="BACK"
          android:textColor="@color/secondary"
          android:textSize="@dimen/_15sdp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginStart="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_6sdp"
        android:background="@drawable/item_botton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:text="NEXT"
          android:textColor="@color/white"
          android:textSize="@dimen/_15sdp" />
    </RelativeLayout>
  </LinearLayout>


  </RelativeLayout>